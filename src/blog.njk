        </div>
        <article>

            {%- for post in collections.post | reverse -%}
                <div class="left-content box grid flex">
                    <div>
                        <h1>
                            <a href="post.url">{{post.data.title}}</a>
                        </h1>
                        <div class="author-date">by {{post.data.author}} on{{post.date}}</div>
                        <p>{{post.data.description}}</p>
                        <a href="{{post.url}}" class="btn">Continue reading</a>
                    </div>
                    <div>
                        <img src="{{post.data.image}}" alt="">
                    </div>
                </div>
            {%- endfor -%}

        </article>
    </div>
    {% include "right.njk" %}
</section>