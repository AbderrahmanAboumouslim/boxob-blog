---
layout: 'base.njk'
---

<div class="screen">
    <div class="container1">
        <div class="title">
            <h1 class="contact-title">Contact us</h1>
        </div>
    </div>
    <form action="#" data-netlify="true" method="POST">
        <div class="user-info">
            <label for="name">Name:</label>
            <input type="text" id="name" placeholder="Enter your name" required>
        </div>
        <div class="user-info">
            <label for="email">Email:</label>
            <input type="text" id="email" placeholder="Enter your email" required>
        </div>
        <div class="user-info">
            <p class="com-p">How can we serve you?</p>
            <textarea name="comment" id="" cols="30" rows="10" placeholder="Enter your comment here..."></textarea>
        </div>
        <button class="from-btn" type="submit">Submit</button>
    </form>
</div>